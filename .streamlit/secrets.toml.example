# Streamlit Cloud Secrets Template
# Copy this to secrets.toml and fill in your values

[secrets]
GITHUB_TOKEN = "your_github_personal_access_token"
GITHUB_REPO = "yourusername/your-private-repo"
HICXAI_DEBUG_MODE = "false"

# OpenAI (Generative Rewriter)
# Recommended: set keys only in Streamlit Cloud Secrets or local shell, not in repo files.
OPENAI_API_KEY = "your_openai_api_key"
# Optional model/base URL overrides
HICXAI_OPENAI_MODEL = "gpt-4o-mini"
HICXAI_OPENAI_BASE_URL = ""
